{
	"manifest_version": 2,
	"name": "Mute-Sites-Blacklist",
	"version": "1.0",
	"description": "Firefox extension that mutes blacklisted sites automatically",
	"homepage_url": "https://github.com/Skekdog/Mute-Sites-Blacklist/",
	"icons": {
		"48": "icons/icon-48.png",
		"96": "icons/icon-96.png"
	},
	"default_locale": "en",
	"permissions": [
		"storage",
		"tabs"
	],
	"options_ui": {
		"page": "options/options.html"
	},
	"background": {
		"scripts": [
			"common.js",
			"background/background.js"
		]
	}
}
